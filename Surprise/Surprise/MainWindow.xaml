<Window x:Class="Surprise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Surprise"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://livewallp.com/wp-content/uploads/2021/04/Doggie-Corgi.jpg"/>
        </Grid.Background>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Height="223" Margin="348,82,0,0" VerticalAlignment="Top" Width="397" SelectionChanged="ListBox_SelectionChanged">
            <ListBox.Background>
                <SolidColorBrush Color="White" Opacity="0.2"/>
            </ListBox.Background>
        </ListBox>
        <ComboBox x:Name="combo" HorizontalAlignment="Left" Margin="94,126,0,0" VerticalAlignment="Top" Width="148" Height="28" SelectionChanged="combo_SelectionChanged">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" Opacity="0.3" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFE5E5E5" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
    </Grid>
</Window>
